@using BB204_Nest_Web_App.ViewModels.TagVMs;

@{
    ViewData["Title"] = "Create";
}


@model ProductVM

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Category Create Form</h4>
            <form class="forms-sample" asp-action="Create" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CostPrice"></label>
                    <input asp-for="CostPrice" class="form-control" placeholder="Cost Price">
                    <span asp-validation-for="CostPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SellPrice"></label>
                    <input asp-for="SellPrice" class="form-control" placeholder="Sell Price">
                    <span asp-validation-for="SellPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Discount"></label>
                    <input asp-for="Discount" class="form-control" placeholder="Discount" accept="image/*">
                    <span asp-validation-for="Discount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StockCount"></label>
                    <input asp-for="StockCount" class="form-control" placeholder="Stock Count" accept="image/*">
                    <span asp-validation-for="StockCount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId">Category</label>
                    <select class="dropdown-item" asp-for="CategoryId" asp-items="new SelectList(ViewBag.Categories,nameof(Category.Id),nameof(Category.Name))" ></select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TagIds">Tag</label>
                    <select class="dropdown-item" asp-for="TagIds" asp-items="new SelectList(ViewBag.Tags,nameof(Tag.Id),nameof(Tag.Name))"></select>
                </div>
                <div class="form-group">
                    <label asp-for="PhotoBack">Photo Back</label>
                    <input asp-for="PhotoBack" class="form-control" placeholder="Photo back" accept="image/*">
                    <span asp-validation-for="PhotoBack" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhotoFront">Photo Front</label>
                    <input asp-for="PhotoFront" class="form-control" placeholder="Photo back" accept="image/*">
                    <span asp-validation-for="PhotoFront" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Files">Files</label>
                    <input asp-for="Files" class="form-control" placeholder="Photo back" accept="image/*">
                    <span asp-validation-for="Files" class="text-danger"></span>
                </div>
                <div asp-validation-summary="ModelOnly"></div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button asp-action="Index" class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>

