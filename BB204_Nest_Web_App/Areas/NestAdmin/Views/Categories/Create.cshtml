
@{
    ViewData["Title"] = "Create";
}

@model Category

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Category Create Form</h4>
            <form class="forms-sample" asp-action="Create" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name" ></label>
                    <input asp-for="Name" class="form-control" placeholder="Name">
                    <span asp-validation-for="Name" class="text-danger" ></span>
                </div>
                <div class="form-group">
                    <label asp-for="Logo"></label>
                    <input asp-for="Logo" class="form-control" placeholder="Logo">
                    <span asp-validation-for="Logo" class="text-danger" ></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhotoFile"></label>
                    <input asp-for="PhotoFile" class="form-control" placeholder="Photo" accept="image/*">
                    <span asp-validation-for="PhotoFile" class="text-danger"></span>
                </div>
                <div asp-validation-summary="ModelOnly"></div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button asp-action="Index" class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>